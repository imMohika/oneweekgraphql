// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cart {
  id    Int     @id
  items CartItem[]
}

model CartItem {
  name        String
  description String?
  price       Int
  quantity    Int
  image       String?
  cartId      Int
  cart        Cart    @relation(fields: [cartId], references: [id], onDelete: Cascade)

  @@id([name, cartId])
}